<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.savvasdalkitsis.android.aspect.example">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name="com.savvasdalkitsis.android.aspect.example.AspectApplication"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.savvasdalkitsis.android.aspect.example.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.SecondActivity"/>

    </application>

</manifest>
